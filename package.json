{
    "name": "ai-input-react",
    "version": "1.0.0-beta.2",
    "description": "React component for text/audio input with AI API integration. Framework-agnostic, works with Next.js, Vite, PHP, and any React setup.",
    "keywords": [
        "react",
        "ai",
        "openai",
        "whisper",
        "gpt",
        "audio",
        "speech-to-text",
        "input",
        "component"
    ],
    "author": "",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/Soptik1290/ai-input.git"
    },
    "main": "./dist/index.js",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "style": "./dist/styles.css",
    "exports": {
        ".": {
            "import": {
                "types": "./dist/index.d.mts",
                "default": "./dist/index.mjs"
            },
            "require": {
                "types": "./dist/index.d.ts",
                "default": "./dist/index.js"
            }
        },
        "./styles.css": "./dist/styles.css"
    },
    "files": [
        "dist"
    ],
    "sideEffects": [
        "*.css"
    ],
    "scripts": {
        "build:js": "tsup",
        "build:css": "npx @tailwindcss/cli -i ./src/styles.css -o ./dist/styles.css --minify",
        "build": "npm run build:js && npm run build:css",
        "dev": "tsup --watch",
        "typecheck": "tsc --noEmit",
        "prepublishOnly": "npm run build"
    },
    "peerDependencies": {
        "react": "^18.0.0 || ^19.0.0",
        "react-dom": "^18.0.0 || ^19.0.0"
    },
    "devDependencies": {
        "@tailwindcss/cli": "^4.1.0",
        "@types/react": "^19.0.0",
        "@types/react-dom": "^19.0.0",
        "react": "^19.2.0",
        "react-dom": "^19.2.0",
        "tailwindcss": "^4.1.0",
        "tsup": "^8.5.0",
        "typescript": "^5.7.0"
    }
}